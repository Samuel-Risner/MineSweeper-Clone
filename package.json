{
  "name": "minesweeper-clone",
  "version": "1.0.0",
  "description": "A minesweeper clone for playing in the browser.",
  "main": "static/js/dist/index.js",
  "scripts": {
    "build_ts": "tsc -p ./tsconfig.json",
    "watch_ts": "tsc -p ./tsconfig.json -w",
    "build_tw": "tailwindcss -i ./tw/input.css -o ./static/css/dist/output.css",
    "watch_tw": "tailwindcss -i ./tw/input.css -o ./static/css/dist/output.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Samuel-Risner/MineSweeper-Clone.git"
  },
  "author": "Samuel Risner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Samuel-Risner/MineSweeper-Clone/issues"
  },
  "homepage": "https://github.com/Samuel-Risner/MineSweeper-Clone#readme",
  "devDependencies": {
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  }
}
